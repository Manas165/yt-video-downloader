    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/linkinput"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="596dp"
        android:background="@drawable/round_element"
        android:elegantTextHeight="true"
        android:elevation="5dp"
        android:ems="8"
        android:textAlignment="center"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/link"
        android:layout_width="205dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="197dp"
        android:layout_marginRight="197dp"
        android:layout_marginBottom="586dp"
        android:background="@drawable/round_textview"
        android:elegantTextHeight="true"
        android:elevation="8dp"
        android:fontFamily="@font/capriola"
        android:text=" Enter the Video Link "
        android:textAlignment="center"
        android:textColor="#000000"

        android:textSize="23dp" />

    <EditText
        android:id="@+id/resinput"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="515dp"
        android:background="#CCCCCC"
        android:ems="8"
        android:focusableInTouchMode="true"
        android:hint="resolution of video ex:360p"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="222dp"
        android:layout_marginRight="222dp"
        android:layout_marginBottom="522dp"
        android:fontFamily="@font/balsamiq_sans"
        android:text="Enter Resolution"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="365dp"
        android:fontFamily="@font/balsamiq_sans"
        android:text="Download Video"
        android:textColor="#000000" />


</RelativeLayout>
